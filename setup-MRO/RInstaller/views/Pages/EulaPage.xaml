<Page x:Class="RInstaller.views.Pages.EulaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RInstaller.views"
      xmlns:models="clr-namespace:RInstaller.Models"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="EulaPage" Background="{Binding WindowBackground, FallbackValue='White'}">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Label x:Name="eulaTitle" Content="{Binding CurrentProductAgreement.Title, FallbackValue=''}" HorizontalAlignment="Left" Margin="36,35,0,0" VerticalAlignment="Top" FontSize="28" Foreground="{Binding PrimaryTextColor}"/>
            <FlowDocumentScrollViewer x:Name="eulaTextBox" Background="White" Margin="0,10,0,0" Width="620" Height="290" Document="{Binding AgreementBody}"></FlowDocumentScrollViewer>
            <CheckBox x:Name="eulaCheckbox" HorizontalAlignment="Left" Margin="40,20,0,0" VerticalAlignment="Top" Click="ToggleButton_Agree" Width="620" Foreground="{Binding PrimaryTextColor}" Content="{Binding CurrentProductAgreement.AgreeOption, FallbackValue=Agree}" />
        </StackPanel>
    </Grid>
</Page>
